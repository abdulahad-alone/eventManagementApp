<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_search"

        android:id="@+id/left_chat_layout"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/Java">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Hello How are you?"
            android:id="@+id/left_chat_text"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_search"
        android:id="@+id/right_chat_layout"
        android:layout_marginStart="80dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/Python">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am fine "
            android:padding="8dp"
            android:id="@+id/rigth_chat_text"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>

</RelativeLayout>